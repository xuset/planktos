{
  "name": "planktos",
  "version": "0.1.1",
  "description": "Serving websites over bittorrent",
  "main": "index.js",
  "bin": "./bin/setup.js",
  "dependencies": {
    "chunk-store-stream": "^2.0.2",
    "create-torrent": "^3.25.1",
    "debug": "^2.6.0",
    "idb-kv-store": "^3.0.0",
    "indexeddb-chunk-store": "^2.0.0",
    "minimist": "^1.2.0",
    "parse-torrent-file": "^4.0.0",
    "run-parallel-limit": "^1.0.3",
    "stream-to-blob": "^1.0.0",
    "webtorrent": "^0.98.0"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "express": "^4.14.0",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.1.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "standard": "^8.6.0"
  },
  "scripts": {
    "standard": "standard",
    "bundle-sw": "browserify sw.js --ignore webtorrent -o build/planktos.sw.js --debug",
    "bundle-lib": "browserify index.js -s planktos -o build/planktos.js --debug",
    "bundle-tests": "browserify test/test.js -o build/test.js --debug",
    "bundle": "npm run -s bundle-lib && npm run -s bundle-sw && npm run -s bundle-tests",
    "test-pre": "standard && npm run -s bundle && ./bin/setup.js -r test/www",
    "test": "npm run -s test-pre && karma start",
    "watch": "nodemon --exec 'npm test'",
    "test-ci": "npm run -s test-pre && ./node_modules/.bin/parse-torrent test/www/planktos/root.torrent && karma start karma.ci.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xuset/planktos.git"
  },
  "keywords": [
    "bittorrent",
    "webtorrent",
    "p2p",
    "static",
    "seed"
  ],
  "standard": {
    "globals": [
      "URL",
      "Response",
      "BroadcastChannel",
      "Blob"
    ],
    "ignore": [
      "build"
    ]
  },
  "author": "xuset",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xuset/planktos/issues"
  },
  "homepage": "https://xuset.github.io/planktos/"
}
